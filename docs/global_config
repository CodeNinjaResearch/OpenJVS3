# The default game mapping
DEFAULT_MAPPING driving_generic

# The default IO to emulate
DEFAULT_IO open_jvs

# The path of the RS485 Converter
DEVICE_PATH /dev/ttyUSB0

# The type of sync circuit to use (0 no circuit, 1 float, 2 switch)
SYNC_TYPE 1

# Output debug info
DEBUG_MODE 0
